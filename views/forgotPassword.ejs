<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Reset Password</title>
    <link rel="stylesheet" href="/css/auth.css">
    <style>
        .error-message {
            color: red;
            font-size: 0.85rem;
            margin-top: 0.1rem;
            margin-bottom: 0.2rem;
            display: none;
        }
    </style>
</head>
<body>
    <div class="auth-card active">
        <h2>WanderScript</h2>
        <form action="/WanderScript/reset-password" method="POST" onsubmit="return validatePasswords()">
            <div class="form-box">
                <label>e-mail id</label>
                <input type="email" name="email" required>

                <label>new password</label>
                <input type="password" name="newPassword" id="newPassword" required>

                <label>confirm new password</label>
                <input type="password" name="confirmPassword" id="confirmPassword" required>
                <div id="passwordError" class="error-message">Passwords do not match</div>

                <button type="submit">Reset Password</button>
            </div>
        </form>

        <div style="text-align: center; margin-top: 1rem;">
            <p style="font-size: 0.9rem; margin-bottom: 0.5rem;">Remembered your password?</p>
            <a href="/WanderScript/signin">
                <button style="padding: 0.5rem 1rem; background-color: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;">
                    Sign In
                </button>
            </a>
        </div>
    </div>

    <% if (message === "Password successfully reset!") { %>
    <script>
        alert("<%= message %>");
        window.location.href = "/WanderScript/signin";
    </script>
    <% } else if (message) { %>
    <script>
        alert("<%= message %>");
    </script>
    <% } %>

    <script>
        const newPasswordInput = document.getElementById('newPassword');
        const confirmPasswordInput = document.getElementById('confirmPassword');
        const passwordError = document.getElementById('passwordError');

        function checkPasswordsMatch() {
            if (confirmPasswordInput.value !== newPasswordInput.value) {
                passwordError.style.display = 'block';
            } else {
                passwordError.style.display = 'none';
            }
        }

        newPasswordInput.addEventListener('input', checkPasswordsMatch);
        confirmPasswordInput.addEventListener('input', checkPasswordsMatch);

        function validatePasswords() {
            if (newPasswordInput.value !== confirmPasswordInput.value) {
                passwordError.style.display = 'block';
                return false;
            }
            return true;
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (message === 'Passwords do not match!') { %>
        <script>
          Swal.fire({
            title: 'WanderScript',
            text: "Passwords do not match!",
            icon: "error",
            confirmButtonColor: '#007bff'
          });
        </script>
        <% } %>
        <% if (message === 'Database error.') { %>
            <script>
              Swal.fire({
                title: 'WanderScript',
                text: "Database error.",
                icon: "error",
                confirmButtonColor: '#007bff'
              });
            </script>
            <% } %>
            <% if (message === 'No user found with that email.') { %>
                <script>
                  Swal.fire({
                    title: 'WanderScript',
                    text: "No user found with that email.",
                    icon: "error",
                    confirmButtonColor: '#007bff'
                  });
                </script>
                <% } %>
                <% if (message === 'Password successfully reset!') { %>
                    <script>
                      Swal.fire({
                        title: 'WanderScript',
                        text: "Password successfully reset!",
                        icon: "success",
                        confirmButtonColor: '#007bff'
                      });
                    </script>
                    <% } %>
                    <% if (message === 'Something went wrong. Try again.') { %>
                        <script>
                          Swal.fire({
                            title: 'WanderScript',
                            text: "Something went wrong. Try again.",
                            icon: "warning",
                            confirmButtonColor: '#007bff'
                          });
                        </script>
                        <% } %>
</body>
</html>