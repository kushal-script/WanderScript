<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP verification - WanderScript</title>
    <link rel="stylesheet" href="/css/otpVerification.css">
</head>
<body>
    <div class="container">
        <h2>OTP Verification</h2>
        <% if (message) { %>
            <p class="message"><%= message %></p>
        <% } %>
        <form action="/WanderScript/verify-otp" id="requestForm" method="post" style="<%= typeof otpExpiry !== 'undefined' ? 'display: none;' : '' %>">
            <input type="hidden" name="OTPrequest" value="true">
            <input type="text" name="username" placeholder="Enter your username" required>
            <input type="email" name="email" placeholder="Enter your email" required>
            <button type="submit" id="requestBtn">Request OTP</button>
        </form>
        <form action="/WanderScript/verify-otp" id="verifyForm" method="post" style="<%= typeof otpExpiry !== 'undefined' ? 'display:block' : 'display:none' %>">
            <input type="hidden" name="verifyRequest" value="1">
            <input type="hidden" name="email" value="<%= typeof mailID !== 'undefined' ? mailID : '' %>">
            <input type="hidden" name="username" value="<%= typeof username !== 'undefined' ? username : '' %>">
            <input type="text" name="userOtp" placeholder="Enter OTP" required>
            <button type="submit">Verify OTP</button>
        </form>
        <div id="timerSection" style="<%= typeof otpExpiry !== 'undefined' ? 'display:block;' : 'display:none;' %>">
            <p id="timer" style="margin-bottom: 0.5rem;"></p>
            <form method="post" action="/WanderScript/verify-otp">
                <input type="hidden" name="OTPrequest" value="1">
                <input type="hidden" name="email" value="<%= typeof mailID !== 'undefined' ? mailID : '' %>">
                <input type="hidden" name="username" value="<%= typeof username !== 'undefined' ? username : '' %>">
                <button type="submit" id="resendBtn" disabled>Resend OTP</button>
            </form>
        </div>
        <div style="text-align: center; margin-top: 1.5rem;">
            <a href="/WanderScript/signin">
                <button class="secondary-btn">Back to Sign In</button>
            </a>
        </div>
        <script>
            <% if (typeof otpExpiry !== 'undefined') { %>
                const expiryTime = <%= otpExpiry %>;
                const timerElement = document.getElementById('timer');
                const resendBtn = document.getElementById('resendBtn');

                function updateTimer() {
                    const secondsLeft = Math.floor((expiryTime - Date.now()) / 1000);
                    if (secondsLeft > 0) {
                        const min = Math.floor(secondsLeft / 60);
                        const sec = secondsLeft % 60;
                        timerElement.textContent = `OTP expires in ${min}:${sec < 10 ? '0' + sec : sec}`;
                    } else {
                        timerElement.textContent = "OTP expired.";
                        resendBtn.disabled = false;
                        clearInterval(interval);
                    }
                }

                const interval = setInterval(updateTimer, 1000);
                updateTimer();
            <% } %>
        </script>
    </div>
</body>
</html>
